@model Departamento
@{
}

<div class="my-3">
    <a class="btn btn-primary" asp-action="Index">Voltar ao início</a>
</div>


<div class="card-block">
    <div class="card-header text-white bg-danger text-center h1">
        Editando departamento
    </div>
    <div class="card-body">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="InstituicaoId" class="control-label"></label>
                <select asp-for="InstituicaoId" class="form-control" asp-items=@ViewBag.Instituicoes></select>
                <span asp-validation-for="InstituicaoId" class="text-danger"></span>
            </div>

            <div class="form-group text-center h3 mt-4">
                <input type="submit" value="Atualizar Departamento" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="card-footer bg-dark text-center text-white">
        Informe os dados acima e/ou clique em um dos botões de ação
    </div>
</div>

