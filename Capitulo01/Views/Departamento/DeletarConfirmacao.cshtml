@model Departamento
@{
}

<div class="my-2">
    <a asp-controller="Departamento" asp-action="Index">Voltar para a lista</a>
</div>

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(model => model.Nome)</h5>
        <form asp-action="Deletar" method="post">
            <input type="hidden" asp-for="Id" name="id" value="@Model.Id" />
            <input type="submit" value="Cofirmar e deletar" class="btn btn-danger" />
        </form>
    </div>
</div>
